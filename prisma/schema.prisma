generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Watchlist {
  id             Int            @id @default(autoincrement())
  coinName       String
  tradeDirection TradeDirection @default(LONG)
  chartLink      String
  setup          Setup          @default(OTHER)
  // validate meta in zod
  meta           String
  entry          Float
  stopLoss       Float
  targets        Float[]
  remarks        String?
  priority       Boolean        @default(false)
  result         Result?
  status         Status         @default(WAITING)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

enum TradeDirection {
  LONG
  SHORT
}

enum Setup {
  ICARUS
  MIDAS_TOUCH
  HERMES
  NIKE
  TRIDENT
  PERSEUS
  HERCULES
  OTHER
}

enum Result {
  WIN
  LOSS
  BREAKEVEN
}

enum Status {
  WAITING
  OPEN
  CLOSED
}
